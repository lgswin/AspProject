@model BloodPressure
@{
    string title = ViewBag.Action + " Blood Pressure Messurement";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Systolic">Systolic(mm Hg)</label>
        <input asp-for="Systolic" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Diastolic">Diastolic(mm Hg)</label>
        <input asp-for="Diastolic" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DateTime">Date of measurement</label>
        <input asp-for="DateTime" class="form-control" />
    </div>

    <input type="hidden" asp-for="BloodPressureId" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>